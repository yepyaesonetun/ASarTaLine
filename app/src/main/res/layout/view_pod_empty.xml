<?xml version="1.0" encoding="utf-8"?>
<com.prime.asartaline.components.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/empty_food" />

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_large"
        android:text="@string/msg_generic_no_data" />

    <Button
        android:id="@+id/btn_refresh_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_empty"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="@dimen/padding_large"
        android:text="@string/lbl_refresh" />


</com.prime.asartaline.components.EmptyViewPod>